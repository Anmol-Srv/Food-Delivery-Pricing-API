{
    "swagger": "3.0",
    "info": {
      "description": "API for a Food Delivery App's Dynamic Pricing Module",
      "version": "1.0.0",
      "title": "Food Delivery App Pricing API"
    },
    "servers": [
      {
        "url": "http://localhost:3001/api",
        "description": "Local development server"
      }
    ],
    "tags": [
      {
        "name": "pricing",
        "description": "Everything about your Pricing"
      }
    ],
    "paths": {
      "/pricing": {
        "post": {
          "tags": ["pricing"],
          "summary": "Calculate delivery cost",
          "description": "",
          "consumes": ["application/json"],
          "produces": ["application/json"],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Pricing information",
              "required": true,
              "schema": {
                "$ref": "#/definitions/PricingRequest"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful operation",
              "schema": {
                "$ref": "#/definitions/PricingResponse"
              }
            },
            "400": {
              "description": "Bad Request - Invalid request format or parameters"
            },
            "404": {
              "description": "Not Found - The specified resource was not found"
            },
            "500": {
              "description": "Internal Server Error - An error occurred on the server"
            }
          }          
        }
      }
    },
    "definitions": {
      "PricingRequest": {
        "type": "object",
        "properties": {
          "zone": { "type": "string" },
          "organization_id": { "type": "string" },
          "total_distance": { "type": "number" },
          "item_type": { "type": "string" }
        },
        "example": {
          "zone": "suburban",
          "organization_id": "6",
          "total_distance": 9,
          "item_type": "perishable"
        }
      },
      "PricingResponse": {
        "type": "object",
        "properties": {
          "total_price": { "type": "number" }
        },
        "example": { "total_price": 24 }
      }
    }
  }
  